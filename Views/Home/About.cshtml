@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/aboutus.css" />
}


<!-- Hero Section -->
<section class="about-hero">
    <h2 class="hero-title">About Gutmeal</h2>
    <p class="hero-subtitle">Revolutionizing Meal Planning Through Intelligent Nutrition</p>
</section>

<!-- Team Cards -->
<section class="team-section">
    <h2>Our Team</h2>
    <div class="team-grid">
        <div class="team-card">
            <div class="team-image">
                <img src="~/images/P.jpeg" alt="Prayag Raj Singh">
            </div>
            <h3 class="team-name">Prayag Raj Singh</h3>
            <p class="team-role">Developer</p>
            <p class="team-description">Worked on API Data Integration and Data Modeling</p>
        </div>

        <div class="team-card">
            <div class="team-image">
                <img src="~/images/G.jpg" alt="Gaurav Yadav">
            </div>
            <h3 class="team-name">Gaurav Yadav</h3>
            <p class="team-role">Developer</p>
            <p class="team-description">Designed entire User Interface</p>
        </div>

        <div class="team-card">
            <div class="team-image">
                <img src="~/images/d.jpg" alt="Dushyanth Asrani">
            </div>
            <h3 class="team-name">Dushyanth Asrani</h3>
            <p class="team-role">Developer</p>
            <p class="team-description">Implementation of CRUD operation across entities</p>
        </div>

        <div class="team-card">
            <div class="team-image">
                <img src="~/images/A.jpeg" alt="Anjali Diwate">
            </div>
            <h3 class="team-name">Anjali Diwate</h3>
            <p class="team-role">Developer</p>
            <p class="team-description">Enabled MVC Architecture and worked visualizing API data through charts</p>
        </div>
    </div>
</section>

<!-- Logical Data Model -->
<div style="text-align: center;">
    <div class="model-container">
        <h2 class="section-title">Logical Data Model</h2>
        <p class="model-description">This model defines the relationships between meal plans, ingredients, and users.</p>
        <div class="model-image-wrapper">
            <img src="~/images/Data Model New.jpeg" alt="Gutmeal Logical Data Model" class="model-image">
        </div>
        <p class="model-note">The structure enables personalized meal plan suggestions based on user input and preferences.</p>
    </div>
</div>

<!-- GitHub Section -->
<section class="github-section">
    <h2>GitHub Repository</h2>
    <div class="github-link">
        <a href="https://github.com/anjalidiwate1212/GutMeal" target="_blank" class="github-button">
            Visit GutMeal GitHub Repository
        </a>
    </div>
</section>